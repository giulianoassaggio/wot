{
  "$id": "/schemas/node",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A node of the web of trust",
  "type": "object",
  "properties": {
    "circle": { "type": "string" },
    "implementation": { "type": "string" },
    "profile": {
      "type": "object",
      "properties": {
        "about": { "type": "string" },
        "aka": { "type": "string" },
        "dob": { "type": "string" },
        "facebook": { "type": "string" },
        "key": { "type": "string" },
        "name": { "type": "string" },
        "nostr": { "type": "string" },
        "picture": { "type": "string" },
        "telegram": { "type": "string" },
        "twitter": { "type": "string" }
      },
      "required": [ "about", "aka", "dob", "facebook", "key", "name", "nostr",
      "picture", "telegram", "twitter" ],
      "additionalProperties": false
    },
    "serial": { "type": "integer" },
    "sources": {
      "type": "array",
      "items": { "type": "string" }
    },
    "trust": {
      "type": "array",
      "items": { "$ref": "/schemas/link" }
    },
    "signature": {
      "type": "object",
      "properties": {
          "hash": { "type": "string" },
          "sig": { "type": "string" }
      },
      "required": [ "hash", "sig" ],
      "additionalProperties": false
    }
  },
  "required": [ "circle", "implementation", "profile", "serial", "sources",
  "trust", "signature"],
  "additionalProperties": false
}
